    <h1>Editar Usuario - <%= usuarioAEditar.nombres %></h1>

    <div class="row">
        <div class="col-sm-5">
            <form action="/Usuario/EditarUsuario" method="post">

                <div class="form-group">
                    <label>Nombres</label>
                    <input type="text" class="form-control" placeholder="Ingrese sus Nombres" name="nombres" value="<%= usuarioAEditar.nombres %>">
                </div>

